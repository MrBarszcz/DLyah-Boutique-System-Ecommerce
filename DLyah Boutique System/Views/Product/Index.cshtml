@using DLyah_Boutique_System.ViewModels
@model List<ProductListViewModel>

@{
    Layout = "_Layout";
}

<div class="text-center">
    <div class="text-end">
        <a role="button" class="btn btn-primary" asp-controller="Product" asp-action="Register"><i
                class="bi bi-send-plus"></i></a>
    </div>

    <h1 class="display-4">Listagem de Produtos</h1>

    <br>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col" style="width: 70px"></th> @* Image *@
            <th scope="col">Nome</th>
            <th scope="col">Gênero</th>
            <th scope="col">Categorias</th>
            <th scope="col">Cores</th>
            <th scope="col">Tamanhos</th>
            <th scope="col">Estoque</th>
            <th scope="col">Preço</th>
            <th scope="col"></th> @* View Button *@
            <th scope="col"></th> @* Edit Button and Remove Button*@
        </tr>
        </thead>
        <tbody>
        @if (Model.Any()) {
            foreach (ProductListViewModel product in Model) {
                <tr>
                    <th scope="row">@product.Product.ProductId</th>
                    <td>
                        @if (product.Images.Any()) {
                            <img src="@product.Images.First().ProductImagePath" alt="@product.Product.ProductName"
                                 style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                        } else {
                            <div
                                style="width: 50px; height: 50px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center; border-radius: 4px;">
                                <i class="bi bi-card-image" style="font-size: 1.5rem; color: #ccc;"></i>
                            </div>
                        }
                    </td>
                    <td>@product.Product.ProductName</td>
                    <td>@product.Gender.Gender</td>

                    @* Categorias *@
                    <td>
                        @if (product.Categories.Any()) {
                            <div>
                                @foreach (var category in product.Categories.Take(3)) {
                                    <span class="badge bg-secondary fw-normal">@category.Category</span>
                                }
                            </div>
                            @if (product.Categories.Count > 3) {
                                <div class="dropdown d-inline-block">
                                    <button class="btn btn-sm btn-link p-0" type="button" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        e mais @(product.Categories.Count - 3)...
                                    </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var category in product.Categories.Skip(3)) {
                                            <li><span class="dropdown-item-text">@category.Category</span></li>
                                        }
                                    </ul>
                                </div>
                            }
                        } else { <span>-</span> }
                    </td>

                    @* Cores *@
                    <td>
                        @if (product.Colors.Any()) {
                            <div class="d-flex align-items-center">
                                @foreach (var color in product.Colors.Take(3)) {
                                    <div class="color-box me-1" style="background-color:@color.HexColor"
                                         title="@color.Color"></div>
                                }
                                @if (product.Colors.Count > 3) {
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light py-0 px-1" type="button"
                                                data-bs-toggle="dropdown" aria-expanded="false" title="Ver mais cores">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            @foreach (var color in product.Colors.Skip(3)) {
                                                <li class="d-flex align-items-center px-3 py-1">
                                                    <div class="color-box me-2"
                                                         style="background-color:@color.HexColor"></div>
                                                    <span>@color.Color</span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        } else { <span>-</span> }
                    </td>

                    @* Tamanhos *@
                    <td>
                        @if (product.Sizes.Any()) {
                            <div>
                                @foreach (var size in product.Sizes.Take(3)) {
                                    <span class="badge bg-light text-dark border">@size.Size</span>
                                }
                            </div>
                            @if (product.Sizes.Count > 3) {
                                <div class="dropdown d-inline-block">
                                    <button class="btn btn-sm btn-link p-0" type="button" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        e mais @(product.Sizes.Count - 3)...
                                    </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var size in product.Sizes.Skip(3)) {
                                            <li><span class="dropdown-item-text">@size.Size</span></li>
                                        }
                                    </ul>
                                </div>
                            }
                        } else { <span>-</span> }
                    </td>

                    @* Estoque *@
                    <td>
                        <strong>@product.Product.ProductQuantity</strong>
                        @if (product.StockProducts.Any()) {
                            <div class="dropdown d-inline-block">
                                <button class="btn btn-sm btn-outline-secondary py-0 px-1 ms-1" type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false" title="Ver estoque detalhado">
                                    <i class="bi bi-box-seam"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-header">Estoque por combinação</li>
                                    @foreach (var stockItem in product.StockProducts) {
                                        <li class="d-flex justify-content-between align-items-center px-3 py-1">
                                            <span>
                                                <div class="color-box color-s me-2"
                                                     style="background-color:@stockItem.Color.HexColor"></div>
                                                @stockItem.Size.Size
                                            </span>
                                            <span class="badge bg-primary rounded-pill">@stockItem.StockQuantity</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </td>

                    @* Preço Formatado *@
                    <td>@product.Product.ProductPrice.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>

                    @* Botão "Ver" Funcional *@
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Product.ProductId"
                           class="btn btn-sm btn-outline-secondary" title="Detalhes">
                            <i class="bi bi-eye"></i>
                        </a>
                    </td>

                    @* Botões Editar/Excluir Corrigidos *@
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-sm btn-outline-primary"
                               asp-route-id="@product.Product.ProductId"
                               asp-controller="Product" asp-action="Edit" title="Editar"><i
                                                                                             class="bi bi-pencil"></i></a> @* <<< CORRIGIDO AQUI *@
                            <button type="button" class="btn btn-sm btn-outline-danger btn-delete-product"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmDeleteProductModal"
                                    data-product-id="@product.Product.ProductId"
                                    title="Excluir">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        } else {
            <tr>
                <td colspan="11" class="text-center p-4">Nenhum produto foi cadastrado ainda.</td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="modal fade" id="confirmDeleteProductModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Confirmar Exclusão de Produto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Você tem certeza que quer excluir este produto?</p>
                    <p class="text-danger">Todos os dados relacionados (estoque, imagens, etc.) serão perdidos. Esta ação não poderá ser desfeita.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteProductBtn">Sim, Excluir</button>
                </div>
            </div>
        </div>
    </div>
    
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

        @* Adiciona a referência ao script específico desta página *@
        <script src="~/js/product-admin.js" asp-append-version="true"></script>
    }
</div>