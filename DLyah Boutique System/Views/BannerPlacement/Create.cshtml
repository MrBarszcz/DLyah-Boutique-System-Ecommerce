@model DLyah_Boutique_System.ViewModels.SelectPageViewModel

@{
    ViewData["Title"] = "Criar Posicionamento - Passo 1";
}

<h1>Novo Posicionamento de Banner</h1>
<p>Primeiro, selecione a página que você deseja configurar.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="ManagePage" method="get">
            <div class="mb-3">
                <label asp-for="SelectedPageName" class="form-label">Páginas Disponíveis</label>
                <select asp-for="SelectedPageName" asp-items="Model.AvailablePages" class="form-select">
                    <option value="">-- Escolha uma página --</option>
                </select>
                <span asp-validation-for="SelectedPageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Avançar para Gerenciar Banners <i class="bi bi-arrow-right"></i></button>
            </div>
        </form>
    </div>
</div>