@model DLyah_Boutique_System.ViewModels.CategoryEditViewModel

@{
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">Atualizar Categoria</h1>

    <form class="form-control" asp-controller="Category" asp-action="Edit" method="post">
        <input type="hidden" asp-for="CategoryId"/>
        
        <div class="mb-3">
            <label for="category" class="form-label">Categoria</label>
            <input type="text" asp-for="Category" class="form-control" id="category" placeholder="Ex: Camisa">
        </div>

        <div class="btn-group" role="group">
            <a role="button" class="btn btn-outline-danger" asp-controller="Category" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-primary text-end">Atualizar</button>
        </div>
    </form>
</div>