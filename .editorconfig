# https://editorconfig.org
root = true

[*.cs]
# ==================================
# ESTILO DE POSICIONAMENTO DE CHAVES
# ==================================
# Coloca o { na mesma linha da declaração
csharp_new_line_before_open_brace_in_control_blocks = false
csharp_new_line_before_open_brace_in_types = false
csharp_new_line_before_open_brace_in_methods = false
csharp_new_line_before_open_brace_in_properties = false
csharp_new_line_before_open_brace_in_accessors = false
csharp_new_line_before_open_brace_in_anonymous_methods = false
csharp_new_line_before_open_brace_in_anonymous_types = false

# ==================================
# OUTRAS REGRAS COMUNS (Exemplos)
# ==================================
# Exigir 'this.' quando acessar membros de instância
dotnet_style_qualification_for_field = true
dotnet_style_qualification_for_property = true
dotnet_style_qualification_for_method = true
dotnet_style_qualification_for_event = true

# Usar var quando o tipo for aparente
csharp_style_var_when_type_is_apparent = true

# Espaçamento
csharp_space_between_parentheses = false